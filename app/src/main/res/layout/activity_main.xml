<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edt_thread_num"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="1"
        android:paddingLeft="20dp"
        android:text="1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/edt_ip"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="10.208.24.208:8080/assets/apk/debug/app-debug.apk"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />


    <com.atar.download.widgets.DownloadProgressButton
        android:id="@+id/btn_down"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/edt_thread_num2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="1"
        android:paddingLeft="20dp"
        android:text="1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/edit_ip2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="10.208.24.208:8080"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_save_ip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="保存"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="615dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp" />

</LinearLayout>